{
    "manifest_version": 3,
    "name": "Debate Master",
    "version": "1.0",
    "permissions": ["activeTab", "contextMenus", "scripting"],
    "host_permissions": ["https://icanhazdadjoke.com/"],
    "background": {
        "service_worker": "dist/background/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/content/content.js"]
        }
    ]
}